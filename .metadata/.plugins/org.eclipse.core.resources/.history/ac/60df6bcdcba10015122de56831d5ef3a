package friday.geometryfigure;

public final class Circle {
	private RoundShape ellipse;

	public Circle(float radius) {
		ellipse = new Ellipse(radius, radius);
	}

	public Circle(Circle circle) {
		this(((Ellipse) circle.ellipse).getMajorAxis());
	}

	public float getPerimeter() {
		return (float) (2 * Math.PI * ((Ellipse) ellipse).getMajorAxis());
	}

	@Override
	public String toString() {
		return String.format("Circle[(height: %.1f, width: %.1f)]",
				((Ellipse) ellipse).getMajorAxis(),
				((Ellipse) ellipse).getMajorAxis() / 2);
	}

	public static void main(String[] args) {
		Circle c = new Circle(5);
		System.out.println(c.getPerimeter());
		// make copy of c
		Circle c2 = new Circle(c);
		System.out.println(c2.getPerimeter());
		Ellipse el = new Ellipse(10, 5);
		System.out.println(el.getArea());
	}
}
