package friday.geometryfigure;

public final class Circle extends Ellipse implements GeometryFigure {

	public Circle(float radius) {
		super(radius, radius);
	}

	public Circle(Circle circle) {
		this(circle.getMajorAxis());
	}

	@Override
	public float getPerimeter() {
		return (float) (2 * Math.PI * getMajorAxis());
	}

	@Override
	public String toString() {
		return String.format("Circle[(height: %.1f, width: %.1f)]", getMajorAxis(),
				getMajorAxis() / 2);
	}

	public static void main(String[] args) {
		Circle c = new Circle(5);
		System.out.println(c.getPerimeter());
	}
}
