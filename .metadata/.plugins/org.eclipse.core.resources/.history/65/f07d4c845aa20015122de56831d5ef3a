	 * BULGARIA(0), ENGLAND(1), GERMANY(2), SPAIN(3), ITALY(4), AUSTRIA(5),
	 * AUSTRALIA( 6);
	 */
	public enum CurrencyCourse {
		BRITISH_POUND(2.7048), EURO(1.95), AUSTRALIAN_DOLLAR(1.28);
