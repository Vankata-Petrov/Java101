			this.course = course;
		}

		public double getCourse() {
			return course;
		}
	}

	private Country currencyFrom;
	private Country currencyTo;

	public CurrencyCalculator(Country currencyFrom, Country currencyTo) {
		// TODO Auto-generated constructor stub
	}
