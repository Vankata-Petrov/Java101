package friday.shopinventory.model;

import friday.shopinventory.exceptions.ProductNotFoundException;

public class Customer {

	private String name;
	private int id;
	private Order order;

	public Customer(String name, int id) {
		this.name = name;
		this.id = id;
	}

	public boolean makeOrder(int... productsId) throws ProductNotFoundException {
		try {
			order = new Order(productsId);
		} catch (Exception e) {
			throw new ProductNotFoundException();
		}
		return true;
	}
}
