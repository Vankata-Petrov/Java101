package week5.friday.bank.account;

import java.util.ArrayList;
import java.util.List;

import week5.friday.bank.Interest;
import week5.friday.bank.interfaces.AccountOperations.OperationType;

public class BankAccount {
	public class History {
		private OperationType operationType;
		private String message;

		public History(OperationType operationType, String message) {
			this.operationType = operationType;
			this.message = message;
		}

		public OperationType getOperationType() {
			return operationType;
		}

		public void setOperationType(OperationType operationType) {
			this.operationType = operationType;
		}

		public String getMessage() {
			return message;
		}

		public void setMessage() {
			String msg = "";
			switch (operationType) {
			case ADD:
				msg = getMoneyOperationValue() + " was added to your account";
				break;
			case WITHDRAW:
				msg = getMoneyOperationValue()
						+ " was withdrawn from your account";
				break;
			case TRANSFER:
				msg = getMoneyOperationValue()
						+ " was transfered to your account";
				break;
			default:
				break;
			}
		}

	}

	private static long COUNTER = 0;
	private final Long ID = COUNTER;
	private Person person;
	private String password;
	private Interest interest;
	private History operationHistory;
	private List<History> accountHistory;
	private double money;
	private double moneyOperationValue;

	public BankAccount(Person person, String password) {
		COUNTER++;
		this.password = password;
		setAccountHistory(new ArrayList<>(5));
		setMoney(0.0);
	}

	public Person getPerson() {
		return person;
	}

	public String getPassword() {
		return password;
	}

	public void setPassword(String password) {
		this.password = password;
	}

	public Interest getInterest() {
		return interest;
	}

	public void setInterest(Interest interest) {
		this.interest = interest;
	}

	public double getMoney() {
		return money;
	}

	public void setMoney(double money) {
		this.money = money;
	}

	public static void main(String[] args) {
		BankAccount ba1 = new BankAccount(null, "asdf");
		BankAccount ba2 = new BankAccount(null, "asdf");
		BankAccount ba3 = new BankAccount(null, "asdf");
		System.out.println(ba1.ID);
		System.out.println(ba2.ID);
		System.out.println(ba3.ID);
	}

	public List<History> getAccountHistory() {
		return accountHistory;
	}

	public void setAccountHistory(List<History> accountHistory) {
		this.accountHistory = accountHistory;
	}

	public double getMoneyOperationValue() {
		return moneyOperationValue;
	}

	public void setMoneyOperationValue(double moneyOperationValue) {
		this.moneyOperationValue = moneyOperationValue;
	}

	public History getOperationHistory() {
		return operationHistory;
	}

	public void setOperationHistory(History operationHistory) {
		this.operationHistory = operationHistory;
	}
}
