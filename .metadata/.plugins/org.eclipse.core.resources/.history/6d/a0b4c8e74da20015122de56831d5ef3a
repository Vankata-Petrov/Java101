package friday.shopinventory.model;

import java.util.HashMap;
import java.util.Iterator;
import java.util.Map;
import java.util.Map.Entry;
import java.util.Set;

import friday.shopinventory.database.ProductDataBase;

public class Order {
	private class ParticularOrder {
		private int id;
		private int quantity;

		public ParticularOrder(int id, int quantity) {
			this.id = id;
			this.quantity = quantity;
		}
	}

	private Map<Integer, Integer> orderInfo;

	public Order(int... productId) {
		orderInfo = new HashMap<Integer, Integer>(productId.length);
		for (int id : productId) {
			int quantity = ProductDataBase.getProducts().get(id).getQuantity();
			orderInfo.put(id, quantity);
		}
	}

	public void showOrder() {
		Iterator<Entry<Integer, Integer>> it = orderInfo.entrySet().iterator();
		while (it.hasNext()) {
			Entry<Integer, Integer> type = it.next();
			System.out.println(type.getKey() + " " + type.getValue());

		}
	}

	public static void main(String[] args) {
		Order order = new Order(1, 2, 3, 4);
		order.showOrder();
	}
}
