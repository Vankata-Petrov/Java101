package week5.friday.bankaccount;

import java.util.Scanner;

import javax.security.auth.login.LoginException;

public class Login {
	private BankAccount account;
	private Scanner sc = new Scanner(System.in);

	public Login() {

	}

	private boolean isAccountExist(BankAccount account) {
		return AccountManager.accounts.containsKey(account);
	}

	private BankAccount login() throws LoginException {

		if (!isAccountExist(account)) {
			throw new LoginException("Account does not exist!");
		}
		return account;

	}
}
