package friday.todolist.test;

import java.util.Scanner;

import friday.todolist.factory.TaskFactory;
import friday.todolist.implementation.ToDoList;
import friday.todolist.task.GoOutTask;
import friday.todolist.task.LearnGeometryTask;
import friday.todolist.task.SleepTask;
import friday.todolist.task.StudyForAlgebraTask;
import friday.todolist.task.Task;

public class TodoTest {
	public static void main(String[] args) {
		ToDoList todo = new ToDoList(11); //11 hours remaining!
		todo.addTask(new StudyForAlgebraTask()); //maximum priority!
		todo.addTask(new LearnGeometryTask()); //default priority, smaller than 10
		todo.addTask(new GoOutTask());  //default priority, smaller than 10
		todo.addTask(new SleepTask()); //straight 8 hours, of course!

		if (todo.canFinish()){
		    System.out.println("Woohoo!");
		} else {
		    System.out.println("I am ...screwed :(");
		}

		System.out.println(todo.top()); //StudyForAlgebraTask
		System.out.println(todo.getTimeNeeded()); //sum of the time needed for every task added in todo list									// list
	}
}
