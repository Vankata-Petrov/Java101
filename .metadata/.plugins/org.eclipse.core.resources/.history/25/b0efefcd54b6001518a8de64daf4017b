package week5.friday.bankaccount;

public class BankAccount {
	private final long uniqueNumber;
	private String firstName;
	private String lastName;
	private String password;
	private int age;
	private Interest interest;
	private OperationsHistory operationHistory;
	private double money;

	public BankAccount(String firstName, String lastName, String password,
			int age, Interest interest) {
		super();
		this.uniqueNumber = AccountManager.accounts.size() + 1;
		this.firstName = firstName;
		this.lastName = lastName;
		this.age = age;
		this.interest = interest;
		money = 0.0;
		operationHistory = new OperationsHistory();
	}

	public long getUniqueNumber() {
		return uniqueNumber;
	}

	public void setUniqueNumber(long uniqueNumber) {
		this.uniqueNumber = uniqueNumber;
	}

	public String getFirstName() {
		return firstName;
	}

	public void setFirstName(String firstName) {
		this.firstName = firstName;
	}

	public String getLastName() {
		return lastName;
	}

	public void setLastName(String lastName) {
		this.lastName = lastName;
	}

	public int getAge() {
		return age;
	}

	public void setAge(int age) {
		this.age = age;
	}

	public Interest getInterest() {
		return interest;
	}

	public void setInterest(Interest interest) {
		this.interest = interest;
	}

	public OperationsHistory getOperationHistory() {
		return operationHistory;
	}

	public void setOperationHistory(OperationsHistory operationHistory) {
		this.operationHistory = operationHistory;
	}

	public void setMoney(double money) {
		this.money = money;

	}

	public double getMoney(double money) {
		this.money -= money;
		return money;

	}

	public double getBalance() {
		return this.money;
	}

	@Override
	public String toString() {
		return "BankAccount [uniqueNumber=" + uniqueNumber + ", firstName="
				+ firstName + ", lastName=" + lastName + ", age=" + age
				+ ", interest=" + interest + ", operationHistory="
				+ operationHistory + ", money=" + money + "]";
	}

}
