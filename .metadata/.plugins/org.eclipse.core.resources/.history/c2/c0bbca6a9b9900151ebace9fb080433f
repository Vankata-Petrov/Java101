package wednesday.onofcollection;

import java.util.ArrayList;
import java.util.List;

public class OnOfCollection<T> {

	List<T> collection;
	T el;

	public OnOfCollection() {
		collection = new ArrayList<T>();
	}

	public void add(T element) {
		boolean flag = false;
		if (collection.contains(element)) {
			T e = collection.get(collection.indexOf(element));
			collection.remove(e);
			flag = true;
		}
//		for (T t : collection) {
//			if (t.hashCode() - element.hashCode() == 0) {
//				T e = collection.get(collection.indexOf(t));
//				collection.remove(e);
//				flag = true;
//				break;
//			}
//		}
		if (!flag) {
			collection.add(element);
		}
	}

	@Override
	public String toString() {
		String str = "";
		for (T t : collection) {
			str += t + " ";
		}
		return str;
	}
}
