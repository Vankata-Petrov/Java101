package friday.todolist.factory;

import friday.todolist.task.GoOutTask;
import friday.todolist.task.LearnGeometryTask;
import friday.todolist.task.SleepTask;
import friday.todolist.task.StudyForAlgebraTask;
import friday.todolist.task.Task;

public class TaskFactory {
	public static Task createTask(String taskName) {
		switch (taskName) {
		case "algebra":
			return new StudyForAlgebraTask();
		case "geometry":
			return new LearnGeometryTask();
		case "out":
			return new GoOutTask();
		case "sleep":
			return new SleepTask();
		default:
			break;
		}
		return null;
	}
}
