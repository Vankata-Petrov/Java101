package com.boyko.vat.models;

public enum Country {
	BULGARIA(20, 359, true, CurrencyCourse.LV), UK(20, 44, false,
			CurrencyCourse.UK), GERMANY(19, 39, false, CurrencyCourse.EURO), AUSTRIA(
			21, 34, false, CurrencyCourse.EURO), ITALY(22, 49, false,
			CurrencyCourse.EURO), SPAIN(23, 43, false, CurrencyCourse.EURO), AUSTRALIA(
			10, 61, false, CurrencyCourse.AUSTRALIAN_DOLLAR);
	private int vat;
	private int countryCode;
	private boolean isDefault;
	private CurrencyCourse currency;

	private Country(int vat, int countryCode, boolean isDefault,
			CurrencyCourse currency) {
		this.vat = vat;
		this.countryCode = countryCode;
		this.isDefault = isDefault;
		this.currency = currency;
	}

	public int getVat() {
		return vat;
	}

	public int getCountryCode() {
		return countryCode;
	}

	public boolean isDefault() {
		return isDefault;
	}

	public CurrencyCourse getCurrency() {
		return currency;
	}

	@Override
	public String toString() {
		return this.name() + "[vat=" + vat + ", code=" + countryCode
				+ ", isDefault=" + isDefault + ", currency=" + currency + "]";
	}
}
