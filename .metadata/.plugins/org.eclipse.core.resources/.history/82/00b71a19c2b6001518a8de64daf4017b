package week5.friday.bank.account;

public class Interest {
	protected enum InterestType {
		SIMPLE, COMPLEX;
	}

	private InterestType type;
	private double interestValue;

	public Interest(InterestType type, double interestValue) {
		this.type = type;
		this.interestValue = interestValue;
	}

	public double calculateAmount(BankAccount account, int period) {
		if (account.getInterest().equals(InterestType.SIMPLE)) {
			return account.getMoney()
					* account.getInterest().getInterestValue() * period;
		}
	}

	public InterestType getType() {
		return type;
	}

	public void setType(InterestType type) {
		this.type = type;
	}

	public double getInterestValue() {
		return interestValue;
	}

	public void setInterestValue(double interestValue) {
		this.interestValue = interestValue;
	}

}
