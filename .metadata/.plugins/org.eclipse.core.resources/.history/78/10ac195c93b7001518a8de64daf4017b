package week5.friday.bankaccount;

public class Interest {
	public enum InterestType {
		COMPLEX, SIMPLE;
	}

	private InterestType type;
	private double size;

	public Interest(InterestType type) {
		this.type = type;
		this.size = 0.5;
	}

	public InterestType getType() {
		return type;
	}

	public void setType(InterestType type) {
		this.type = type;
	}

	public double getSize() {
		return size;
	}

	public void setSize(double size) {
		this.size = size;
	}

	@Override
	public String toString() {
		return "Interest [type=" + type + ", size=" + size + "]";
	}

}
