package friday.geometryfigure.point;

import java.awt.Point;

public class LineSegment {
	private Point p1;
	private Point p2;

	public LineSegment(Point p1, Point p2) {
		if (p1.equals(p2)) {
			System.out.println("Cannot create a line segment with zero ");
		}
		this.p1 = p1;
		this.p2 = p2;
	}

	public LineSegment(LineSegment line) {
		this(line.p1, line.p2);
	}

	@Override
	public String toString() {
		return "LineSegment [p1=" + p1 + ", p2=" + p2 + "]";
	}

	public static void main(String[] args) {
		System.out.println(new LineSegment(new Point(3, 2), new Point(5, 4)));
	}
}
