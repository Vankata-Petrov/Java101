package monday.subtitlefixer;

import java.io.BufferedWriter;
import java.io.File;
import java.io.FileOutputStream;
import java.io.FileWriter;
import java.io.IOException;
import java.nio.charset.Charset;
import java.nio.file.Files;
import java.nio.file.Paths;
import java.util.List;

public class SubtitleFixer {
	private File file;

	public SubtitleFixer(File file) throws IOException {
		this.file = file;
		fixEncoding();
	}

	private void fixEncoding() throws IOException {
		String f = file.getPath();
		List<String> br = Files.readAllLines(Paths.get(f), Charset.forName("windows-1251"));
		boolean isDelete = file.delete();
		System.out.println(isDelete);
		if (isDelete) {
			try (BufferedWriter writer = new BufferedWriter(new FileWriter(new File(f)))) {
				FileOutputStream s = new FileOutputStream(file, false);
				for (String string : br) {
					System.out.println(string);
					writer.write(string);
				}
			}
			List<String> l = Files.readAllLines(Paths.get(f), Charset.forName("windows-1251"));
			for (String string : l) {
				System.out.println(string);
			}
		}
	}

	public static void main(String[] args) throws IOException {
		File f = new File("lost.s04e11.hdtv.xvid-2hd.srt");
		new SubtitleFixer(f);
	}
}
