package friday.shopinventory;

import friday.shopinventory.exceptions.ProductNotFoundException;
import friday.shopinventory.exceptions.ProductOutOfStockException;
import friday.shopinventory.model.Customer;

public class InventoryTest {

	public static void main(String[] args) throws ProductNotFoundException,
			ProductOutOfStockException {
		Customer customer = new Customer("Gosho", 1);
		System.out
				.println("Submit order: " + customer.makeOrder(2, 3));
		System.out
				.println("Price of the order is: " + customer.makeOrder(1, 2));
		System.out
				.println("Price of the order is: " + customer.makeOrder(5, 4));
		Customer customer2 = new Customer("Pesho", 2);
		customer.showOrders();
		// product with id:2 is out of stock so ... ProductNotFoundException
		System.out.println("Price of the order is: "
				+ customer2.makeOrder(4, 5));
		customer2.showOrders();
		System.out.println();
	}
}
