package friday.geometryfigure;

public final class Ellipse implements GeometryFigure {
	private float majorAxis;
	private float minorAxis;

	public Ellipse(float majorAxis, float minorAxis) {
		this.majorAxis = majorAxis;
		this.minorAxis = minorAxis;
	}

	public Ellipse(Ellipse ellipse) {
		this(ellipse.majorAxis, ellipse.minorAxis);
	}

	public float getMajorAxis() {
		return majorAxis;
	}

	public void setMajorAxis(float majorAxis) {
		this.majorAxis = majorAxis;
	}

	public float getMinorAxis() {
		return minorAxis;
	}

	public void setMinorAxis(float minorAxis) {
		this.minorAxis = minorAxis;
	}

	public Point getLeftVertex() {
		return new Point(-majorAxis, 0);
	}

	public Point getRightVertex() {
		return new Point(majorAxis, 0);
	}

	public Point getUpperVertex() {
		return new Point(minorAxis, 0);
	}

	public Point getLowerVertex() {
		return new Point(-minorAxis, 0);
	}

	@Override
	public float getPerimeter() {
		return (float) (Math.PI * (3 * (minorAxis + majorAxis) - Math
				.sqrt((3 * minorAxis + majorAxis) * (3 * majorAxis + minorAxis))));
	}

	@Override
	public float getArea() {
		return (float) (Math.PI * minorAxis * majorAxis);
	}

	@Override
	public Point getCenter() {
		return new Point(0, 0);
	}
}
