package week5.friday.bankaccount;

import java.util.Map;
import java.util.Scanner;

import week5.friday.bankaccount.Interest.InterestType;

public class AccountManager {
	private static Scanner sc = new Scanner(System.in);
	protected static Map<Integer, BankAccount> accounts;

	public static boolean createAccount() {
		switch (sc.nextInt()) {
		case 1:
			System.out.println("Enter first name");
			String firstName = sc.nextLine();

			System.out.println("Enter second name");
			String secondName = sc.nextLine();

			System.out.println("Enter password");
			String password = sc.nextLine();

			System.out.println("Enter age");
			int age = sc.nextInt();

			System.out
					.println("Choose Interest Type: /n1 for SAMPLE/n2 for COMPLEX");
			InterestType interestType = null;
			switch (sc.nextInt()) {
			case 1:
				interestType = InterestType.SIMPLE;
				break;
			case 2:
				interestType = InterestType.COMPLEX;
				break;
			default:
				break;
			}
			BankAccount account = new BankAccount(firstName, secondName, password, age,
					new Interest(interestType))
			accounts.put(account.getUniqueNumber(),account);
			break;

		default:
			break;
		}
		return false;

	}

	public boolean isAccountExist(BankAccount account) {
		return accounts.contains(account);
	}

	public static void login() {
		if (condition) {

		}

	}
}
